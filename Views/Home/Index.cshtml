@{
}



<!DOCTYPE html>
<html lang="en">
<head>
    <script src="~/js/openingPage.js"></script>
    <img id="preview" src="#" alt="Uploaded Image">
    <title>Your Page Title</title>

</head>
   
<body>
    <div id="inputTable">


        <form>
            <table id="inputTable">
                <thead>
                    <tr>
                        <th>
                            First Name
                        </th>
                        <th>
                            Second Name
                        </th>
                        <th>
                            Age Min
                        </th>
                        <th>
                            Age Max
                        </th>
                        <th>
                            City
                        </th>
                        <th>
                            Martial Status
                        </th>
                        <th>
                            Search
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><input type="text" placeholder="First Name" id="fname" /></td>
                        <td><input type="text" placeholder="Second Name" id="sname" /></td>
                        <td><input type="number" placeholder="Min Age" id="minAge" /></td>
                        <td><input type="number" placeholder="Max Age" id="maxAge" /></td>
                        <td><input type="text" placeholder="City" id="city" /></td>
                        <td><input type="text" placeholder="Martial Status" id="mstatus" /></td>
                        <td><button onclick="submitSearch()"> Filter</button></td>

                    </tr>
                </tbody>
            </table>
        </form>
    </div>
    <br />
    <br />
    <div id="usersTable">


        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Marital Status</th>
                    <th>Telephone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.firstName</td>
                        <td>@person.lastName</td>
                        <td>@person.age</td>
                        <td>@person.address</td>
                        <td>@person.martialStatus</td>
                        <td>@person.telephone</td>
                        <td>@person.email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
