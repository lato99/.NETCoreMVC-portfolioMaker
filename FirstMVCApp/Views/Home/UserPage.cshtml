@model List<person_user>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Hidden Content Example</title>
</head>
<body>
    <div id="notHide">
        <table id="usersTable">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Marital Status</th>
                    <th>Telephone</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.firstName</td>
                        <td>@person.lastName</td>
                        <td>@person.age</td>
                        <td>@person.address</td>
                        <td>@person.martialStatus</td>
                        <td>@person.telephone</td>
                        <td>@person.email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
